{
  "name": "vscode-languagetool",
  "displayName": "LanguageTool for Visual Studio Code",
  "preview": false,
  "description": "LanguageTool grammar checking for Visual Studio Code.",
  "author": "Julian Valentin",
  "license": "Apache-2.0",
  "version": "4.6.0",
  "publisher": "valentjn",
  "repository": {
    "url": "https://github.com/valentjn/vscode-languagetool"
  },
  "icon": "img/LanguageTool-Icon.png",
  "galleryBanner": {
    "color": "#6565f6",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "keywords": [
    "spell",
    "grammar",
    "proofread",
    "checker",
    "grammar-checker"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown",
    "onLanguage:latex"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "title": "LanguageTool for Visual Studio Code",
      "properties": {
        "languageTool.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether the extension is enabled. Allows to disable LanguageTool on specific workspaces."
        },
        "languageTool.language": {
          "type": "string",
          "default": "en-US",
          "description": "The language (e.g., \"en-US\") LanguageTool should check against."
        },
        "languageTool.latex.dummyCommands": {
          "type": "array",
          "default": [],
          "description": "List of additional LaTeX commands to replace by dummy words, listed together with empty arguments (e.g., \"\\cite{}\", \"\\cite[]{}\")."
        },
        "languageTool.latex.ignoreCommands": {
          "type": "array",
          "default": [],
          "description": "List of additional LaTeX commands to ignore by the LaTeX parser, listed together with empty arguments (e.g., \"\\ref{}\", \"\\documentclass[]{}\")."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./ && ./lib/languagetool-languageserver/gradlew --project-dir ./lib/languagetool-languageserver/ installDist",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "@types/vscode": "^1.37.0",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  }
}
