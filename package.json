{
  "name": "vscode-languagetool",
  "displayName": "LanguageTool for Visual Studio Code",
  "preview": false,
  "description": "LanguageTool grammar checking for Visual Studio Code.",
  "author": "Julian Valentin",
  "license": "Apache-2.0",
  "version": "4.6.0",
  "publisher": "valentjn",
  "repository": {
    "url": "https://github.com/valentjn/vscode-languagetool"
  },
  "icon": "img/LanguageTool-Icon.png",
  "galleryBanner": {
    "color": "#6565f6",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "keywords": [
    "spell",
    "grammar",
    "proofread",
    "checker",
    "grammar-checker"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown",
    "onLanguage:latex"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "LanguageTool for Visual Studio Code",
      "properties": {
        "languageTool.dictionary": {
          "type": "array",
          "default": [],
          "description": "Additional dictionary words"
        },
        "languageTool.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Allow to enable LanguageTool on specific workspaces"
        },
        "languageTool.language": {
          "type": "string",
          "default": "en-US",
          "description": "The language LanguageTool should check against"
        },
        "languageTool.latex.dummyCommands": {
          "type": "array",
          "default": [],
          "description": "LaTeX documents: Additional LaTeX commands to replace by dummies together with empty arguments (e.g., \"\\cite{}\", \"\\cite[]{}\")"
        },
        "languageTool.latex.ignoreCommands": {
          "type": "array",
          "default": [],
          "description": "LaTeX documents: Additional LaTeX commands to ignore together with empty arguments (e.g., \"\\ref{}\", \"\\documentclass[]{}\")"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./ && ./lib/languagetool-languageserver/gradlew --project-dir ./lib/languagetool-languageserver/ installDist",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0"
  }
}
